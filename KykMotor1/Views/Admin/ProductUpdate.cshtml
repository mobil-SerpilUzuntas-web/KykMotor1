@model ProductListModel
@{
    ViewData["Title"] = "ProductUpdate";
}

<h1>Admin Ürün Güncelleme Sayfası</h1>


<h2>Update Product</h2>

<form asp-action="ProductUpdate" method="post">
    @for (var i = 0; i < Model.Products.Count; i++)
    {
        <div>
            <label>Name:</label>
            <input asp-for="Products[i].Name" />
        </div>
        <div>
            <label>Price:</label>
            <input asp-for="Products[i].Price" />
        </div>
        <div>
            <label>Description:</label>
            <input asp-for="Products[i].Description" />
        </div>
        <div>
            <label>Koli Adet:</label>
            <input asp-for="Products[i].KoliAdet" />
        </div>
    }
    <div>
        <label>Category:</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"></select>
    </div>
    <div>
        <label>Subbir Category:</label>
        <select asp-for="SubBirId" asp-items="@(new SelectList(Model.SubbirCategori, "Id", "Name"))"></select>
    </div>
    <div>
        <label>Sub Iki Category:</label>
        <select asp-for="SubIkiId" asp-items="@(new SelectList(Model.SubIkiCategory, "Id", "Name"))"></select>
    </div>
    <button type="submit">Update</button>
</form>


