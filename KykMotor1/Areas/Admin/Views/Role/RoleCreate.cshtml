@model RoleCreateViewModel
@{
    ViewData["Title"] = "RoleCreate";
    Layout = "~/Views/Shared/_LayoultAreas.cshtml";
}

<h1>Area Rol Oluşturma</h1>

<div class="row">
<div class="col-md-4">
    <form asp-controller="Role" asp-action="RoleCreate" method="post">

      <div class="form-group">
          <input asp-for="Name" value="@Model.Name" class="form-control" placeholder="Rol Oluştur" />
          <span asp-validation-for="Name" class="text-danger"></span>
      </div>
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
         <input type="submit" value="Oluştur" class="btn btn-primary"/>
      </div>


    </form>
  </div>
</div>
<div>
<a asp-controller="Role" asp-action="Index">Rol listesine geri dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

